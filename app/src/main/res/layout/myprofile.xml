<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MyProfileFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg">

    <!--第三个fragment，我的资料个人信息的界面    2018/3/26 覃正鉴-->

    <TableRow
        android:layout_height="100dp"
        android:gravity="center"
        android:background="@color/bg_gr">

        <TextView
            android:id="@+id/reset1"
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="21dp"
            android:text="我的资料"
            android:textColor="@color/text_white"/>

    </TableRow>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:gravity="center">


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_marginTop="10px"
        android:gravity="center">

        <TextView
            android:id="@+id/textname"
            android:layout_width="230dp"
            android:layout_height="25dp"
            android:background="#bebebe"
            android:gravity="center"
            android:hint="姓名" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20px"
        android:gravity="center">

        <TextView
            android:id="@+id/textcode"
            android:layout_width="230dp"
            android:layout_height="25dp"
            android:background="#bebebe"
            android:gravity="center"
            android:hint="身份证号码" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20px"
        android:gravity="center">

        <TextView
            android:id="@+id/textPwd1"
            android:layout_width="230dp"
            android:layout_height="25dp"
            android:background="#bebebe"
            android:gravity="center"
            android:hint="登陆密码" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20px"
        android:gravity="center">

        <TextView
            android:id="@+id/text_company"
            android:layout_width="230dp"
            android:layout_height="25dp"
            android:background="#bebebe"
            android:gravity="center"
            android:hint="所在公司" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20px">

        <Button
            android:id="@+id/modifyPro"
            android:layout_width="78dp"
            android:layout_height="34dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="left"
            android:layout_marginEnd="71dp"
            android:background="@color/bg_white"
            android:gravity="center"
            android:text="修改资料"
            tools:ignore="NotSibling" />

        <Button
            android:id="@+id/forgetBtn1"
            android:layout_width="78dp"
            android:layout_height="34dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="left"
            android:layout_marginStart="75dp"
            android:background="@color/bg_white"
            android:text="重置密码" />
    </RelativeLayout>

    <TableRow android:layout_marginTop="25dp"
        android:gravity="center">

        <Button
            android:id="@+id/exitBtn"
            android:layout_width="156dp"
            android:layout_height="match_parent"
            android:background="@drawable/round_rect_btn_selector"
            android:text="退出登陆" />s

    </TableRow>


</TableLayout>
