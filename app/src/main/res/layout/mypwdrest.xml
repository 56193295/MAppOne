<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetActivity"
    android:background="@color/bg_pick">

    <!--用户未登陆前忘记密码，重置密码的界面-->

    <TableRow
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/reset1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="重置密码" />

    </TableRow>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/image"
            android:layout_width="90dp"
            android:layout_height="70dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="75dp">

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="0dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:hint="手机号"
                android:inputType="phone"
                android:maxLength="15" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp">

            <Button
                android:layout_width="95dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="发送验证码" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20px"
        android:gravity="center">

        <EditText
            android:id="@+id/edit_code"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center"
            android:hint="请录入手机收到的验证码"
            android:maxLength="15" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20px"
        android:gravity="center">

        <EditText
            android:id="@+id/edit_pwd3"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center"
            android:hint="设置新登陆密码"
            android:inputType="textPassword"
            android:maxLength="15" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:gravity="center">

        <EditText
            android:id="@+id/edit_pwd4"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center"
            android:hint="确认新登陆密码"
            android:inputType="textPassword"
            android:maxLength="15" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="25dp"
        android:gravity="center">

        <Button
            android:id="@+id/regiBtn"
            android:layout_width="159dp"
            android:layout_height="38dp"
            android:background="@drawable/round_rect_btn_selector"
            android:text="密码修改" />

    </RelativeLayout>



</TableLayout>