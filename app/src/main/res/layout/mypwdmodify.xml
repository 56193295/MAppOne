<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_pick">

    <!--用户登陆后,在个人资料里，密码修改跳转到修改密码的界面-->

    <TableRow
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/reset1"
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="修改密码" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/image"
            android:layout_width="72dp"
            android:layout_height="61dp" />
    </TableRow>

    <RelativeLayout
        android:layout_marginTop="50px"
        android:gravity="center">

        <EditText
            android:id="@+id/edit_Pwd1"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:background="#bebebe"
            android:gravity="center"
            android:hint="原登陆密码"
            android:inputType="textPassword"
            android:maxLength="15" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20px"
        android:gravity="center">

        <EditText
            android:id="@+id/edit_Pwd2"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:background="#bebebe"
            android:gravity="center"
            android:hint="设置登陆密码"
            android:inputType="textPassword"
            android:maxLength="15" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20px"
        android:gravity="center">

        <EditText
            android:id="@+id/edit_Pwd5"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:background="#bebebe"
            android:gravity="center"
            android:hint="确认新登陆密码"
            android:inputType="textPassword"
            android:maxLength="15" />
    </RelativeLayout>



    <TableRow android:layout_marginTop="25dp"
        android:gravity="center">

        <Button
            android:id="@+id/resetBtn1"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_rect_btn_selector"
            android:text="密码修改" />

    </TableRow>



</TableLayout>
