<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:stretchColumns="3,3"
    android:background="@color/bg_pick">

    <!--登陆主界面-->

    <TableRow
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center">


        <TextView
            android:id="@+id/image"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_launcher_background" />

    </TableRow>

    <RelativeLayout
        android:layout_width="20dp"
        android:layout_marginTop="30px"
        android:gravity="center">

        <EditText
            android:id="@+id/editPhone"
            android:layout_width="274dp"
            android:layout_height="50dp"
            android:background="@color/text_white"
            android:ems="10"
            android:gravity="center"
            android:hint="手机号"
            android:inputType="phone"
            android:maxLength="15"
            android:textColorHint="@color/background_light" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20px"
        android:gravity="center">

        <EditText
            android:id="@+id/editPwd"
            android:layout_width="273dp"
            android:layout_height="50dp"
            android:background="@color/text_white"
            android:gravity="center"
            android:hint="密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColorHint="@color/background_light" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:paddingLeft="55dp"
        android:paddingBottom="10dp">


        <RelativeLayout
            android:layout_width="128dp"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp">

            <EditText
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/text_white"
                android:gravity="center"
                android:hint="请录入手机收到的验证码"
                android:maxLength="6"
                android:textColorHint="@color/background_light"
                android:textSize="10dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="58dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp">

            <Button
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:hint="发送验证码"
                android:textColorHint="@color/text_white"
                android:textSize="10dp" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout  >

        <Button
            android:id="@+id/registBtn"
            android:layout_width="125dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:gravity="right"
            android:text="注册信息" />

        <Button
            android:id="@+id/forgetBtn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#00000000"
            android:gravity="center"
            android:text="忘记密码？"
            android:textColor="@color/text_white" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="36dp"
            android:text="记住密码" />


    </RelativeLayout>
    <TableRow android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="183dp"
            android:layout_height="match_parent"
            android:background="@drawable/round_rect_btn_selector"
            android:text="登陆" />
    </TableRow>

</TableLayout>